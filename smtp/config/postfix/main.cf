# Configurazione base
myhostname = smtp.bisiacaria.com
mydomain = smtp.bisiacaria.com
myorigin = $mydomain

# Interfacce di ascolto - SOLO rete interna
inet_interfaces = 0.0.0.0
inet_protocols = ipv4

# Configurazione di rete - SOLO container app
mynetworks = 127.0.0.0/8, 172.20.0.0/16, 10.0.0.0/8
mynetworks_style = subnet

# Configurazione OpenDKIM
milter_default_action = accept
milter_protocol = 6
smtpd_milters = inet:localhost:8891
non_smtpd_milters = inet:localhost:8891 